{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "compiled/app.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node compiled/app.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "pretest": "eslint . --ext .ts --fix",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register 'tests/**/*.ts' --timeout 120000 --exit",
    "production": "cross-env NODE_ENV=production node .",
    "preproduction": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint . --ext .ts --fix",
      "prettier --config .prettierrc 'src/**/*.ts' --write"
    ],
    "../client/src/**/*.{js,jsx}": [
      "eslint --config ../client/.eslintrc '../client/**/**/*.{js, jsx}' --fix",
      "prettier --config ../client/.prettierrc '../client/**/**/*.{js, jsx}' --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DSC-VJTI/CA-Client.git"
  },
  "bugs": {
    "url": "https://github.com/DSC-VJTI/CA-Client/issues"
  },
  "homepage": "https://github.com/DSC-VJTI/CA-Client#readme",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.0",
    "@types/morgan": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "mongodb-memory-server": "^6.9.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.15"
  }
}
