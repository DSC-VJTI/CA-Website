{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "compiled/app.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "cp -R src/views/ compiled/",
    "prestart": "npm run build",
    "start": "node compiled/app.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/app.ts",
    "pretest": "eslint . --ext .ts --fix",
    "test": "cross-env NODE_ENV=test mocha 'tests/**/*.ts'",
    "coverage": "nyc npm test",
    "production": "cross-env NODE_ENV=production node compiled/app.js",
    "preproduction": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint . --ext .ts --fix",
      "prettier --config .prettierrc 'src/**/*.ts' --write"
    ],
    "../client/src/**/*.{js,jsx}": [
      "eslint --config ../client/.eslintrc '../client/src/**/*.{js, jsx}' --fix",
      "prettier --config ../client/.prettierrc '../client/src/**/*.{js, jsx}' --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DSC-VJTI/CA-Client.git"
  },
  "bugs": {
    "url": "https://github.com/DSC-VJTI/CA-Client/issues"
  },
  "homepage": "https://github.com/DSC-VJTI/CA-Client#readme",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/sinon": "^9.0.11",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "mongodb-memory-server": "^6.9.3",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.8.1",
    "@types/cors": "^2.8.10",
    "@types/ejs": "^3.0.6",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/nodemailer": "^6.4.1",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "eslint": "^7.19.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.5.0",
    "prettier": "2.2.1",
    "request": "^2.88.2",
    "typescript": "^4.2.3"
  }
}
